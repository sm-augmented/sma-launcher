<UserControl x:Class="SMClient.Controls.PathSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SMClient.Controls">
  <Grid>
    <Label Margin="10,0,0,0" HorizontalAlignment="Left" Width="144" Height="27" VerticalAlignment="Top"
           Foreground="White" FontSize="14" Content="{Binding Path=LabelText}"/>
    <TextBox Name="DirTextBox" Margin="159,0,46,0" Height="27" VerticalAlignment="Top" IsReadOnly="true"
             Text="{Binding Path=SelectedDirectory}"/>
        <Button Name="OpenDirectoryBtn" Click="OpenDirectoryBtn_Click" Content="..." Margin="0,0,10,0" HorizontalAlignment="Right" Width="31"
            Height="27" VerticalAlignment="Top"/>
  </Grid>
</UserControl>